<section id="forms">
  <div class="card" id="primary-content">
    <div class="header">
      <h1>Forms</h1>
    </div>
    <div class="content">
      <% example do %>
<h2>Form Title</h2>
<form data-abide novalidate>
  <div data-abide-error class="alert callout" style="display: none;">
    <p><i class="fi-alert"></i> There are some errors in your form.</p>
  </div>
  <div class="row form-group">
    <div class="small-12 columns">
      <label>Label
        <input type="text" placeholder="Placeholder text" aria-describedby="exampleHelpText" required pattern="number">
        <span class="form-error">Required</span>
      </label>
      <p class="help-text" id="exampleHelpText">This helper text.</p>
    </div>
  </div>
  <div class="row form-group">
    <div class="small-12 columns">
      <label>Label
        <input type="text" placeholder="Placeholder text" aria-describedby="exampleHelpTex" data-abide-ignore>
      </label>
    </div>
  </div>
  <div class="row form-group">
    <div class="medium-6 columns">
      <label>Label
        <input type="text" placeholder="Placeholder text" pattern="url">
      </label>
    </div>
    <div class="medium-6 columns">
      <label>Label
        <select id="select" required>
          <option value=""></option>
          <option value="volvo">Volvo</option>
          <option value="saab">Saab</option>
          <option value="mercedes">Mercedes</option>
          <option value="audi">Audi</option>
        </select>
      </label>
    </div>
  </div>
  <div class="row form-group">
    <div class="large-6 columns">
      <fieldset>
        <legend>Choose one of these:</legend>
        <input type="radio" name="pokemon" value="Red" id="pokemonRed"><label for="pokemonRed">Red</label>
        <input type="radio" name="pokemon" value="Blue" id="pokemonBlue" required><label for="pokemonBlue">Blue</label>
        <input type="radio" name="pokemon" value="Yellow" id="pokemonYellow"><label for="pokemonYellow">Yellow</label>
      </fieldset>

      <fieldset>
        <legend>Choose one or more of these:</legend>
        <input id="checkbox1" type="checkbox"><label for="checkbox1">Checkbox 1</label>
        <input id="checkbox2" type="checkbox" required><label for="checkbox2">Checkbox 2</label>
        <input id="checkbox3" type="checkbox"><label for="checkbox3">Checkbox 3</label>
      </fieldset>
    </div>
  </div>
  <div class="form-actions">
    <button type="button" class="button success">Save form</button> <span>or <a href="">cancel</a></span>
  </div>
</form>
      <% end %>
    </div>
  </div>
</section>
